<%= render user_signed_in? ? "../views/navbar_loggedin" : "../views/navbar_notloggedin" %>

<div class="justify-content-around">
  <a class="btn btn-success m-3" href="<%= new_listing_path  %>" >Add new vehicle</a>
  <div class="container-fluid card-container d-flex justify-content-center flex-wrap">
    <% @listings.each do |listing| %>
      <a class="card col-7 mx-2 px-0 my-2 border-0" style="text-decoration:none" href="my_listings/<%= listing.id %>">
        <img class="card-img-top" src="<%= cl_image_path listing.photo.key %>">
        <div class="card-infos mx-2">
          <div class="row justify-content-between mt-2 mx-1">
            <h2><%= listing.name %></h2>
            <div class="row justify-content-between mx-1">
              <h3 class="mx-1"><%= listing.price %>â‚¬</h3>
              <h4>per day</h4>
            </div>
          </div>
          <div class="row justify-content-between mx-1">
            <h5><em><%= listing.city %>, <%= listing.country %></em></h5>
          </div>
          <p class="mx-1"><%= listing.description %></p>
        </div>
      </a>
      <div class="d-flex update-listing flex-column">
        <%= link_to 'Update', edit_listing_path(listing), class: "btn btn-gradient" %>
        <%= link_to 'Delete', listing_path(listing), class: "btn btn-gradient", method: :delete, data: { confirm: 'Are you sure you want to delete this listing?' } %>
      </div>
    <% end %>
  </div>
</div>

<%= render "../views/footer" %>
